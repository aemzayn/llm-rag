# Database Configuration
DATABASE_URL=postgresql://llmrag_user:llmrag_password@postgres:5432/llmrag_db
POSTGRES_USER=llmrag_user
POSTGRES_PASSWORD=llmrag_password
POSTGRES_DB=llmrag_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Superadmin Initial Setup
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=changeme123
SUPERADMIN_NAME=Super Admin

# File Storage Configuration
KEEP_ORIGINAL_FILES=true
MAX_FILE_SIZE_MB=250
UPLOAD_DIR=/app/uploads

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
DEFAULT_OLLAMA_MODEL=llama2

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# Frontend Configuration (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# API Keys Encryption
ENCRYPTION_KEY=generate-using-fernet-key-generation
